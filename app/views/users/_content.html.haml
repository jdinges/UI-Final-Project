-content_for :style_name do
  = "#{@user.style.stylesheet}"

#prof-info

  .content-section
    %h3 Contact Information
    -#%ul#contact_info
    -if @user.office?
      %p Office: #{@user.office}
    -if @user.phone_number?
      %p Phone Number: #{@user.phone_number}
    -if @user.email?
      %p Email: #{@user.email}
  

  -if @user.bio.length != 0
    .content-section
      %h3 Biography
      %p#bio= @user.bio

  -if @user.courses.length != 0
    .content-section
      %h3 Courses
      %ul#courses
        - for course in @user.courses
          %p #{course.title}
 
  -if @user.papers.length != 0     
    .content-section
      %h3 Papers and Publications
      %ul#papers
      -for paper in @user.papers
        %p #{paper.title}

  -if @user.educations.length != 0
    .content-section
      %h3 Education
      %ul#educations
      -for education in @user.educations
        %p #{education.degree}

  -if @user.researches.length != 0
    .content-section
      %h3 Research
      %ul#researches
      -for research in @user.researches
        %p #{research.title}
