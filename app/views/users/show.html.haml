-title "#{@user.title} #{@user.name}"

.back= link_to "Back", :back

#prof-info
  -unless @user.bio.nil?
    .content-section
      %h3 Biography
      %span= @user.bio
    
  -unless @user.courses.count == 0
    .content-section
      %h3 Courses
      -for course in @user.courses
        =link_to course.title, course.link
      
  -unless @user.papers.count == 0
    .content-section
      %h3 Papers
      -for paper in @user.papers
        %span= paper.title
        
.back= link_to "View all", users_path
