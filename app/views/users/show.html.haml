-title "#{@user.title} #{@user.name}"

.clear

-content_for :style_name do
  = "#{@user.style.stylesheet}"

#prof-info

  .content-section
    %h3 Contact Information
    -#%ul#contact_info
    -if @user.office?
      %p Office: #{@user.office}
    -if @user.phone_number?
      %p Phone Number: #{@user.phone_number}
    -if @user.email?
      %p Email: #{@user.email}
  

  -if @user.bio
    .content-section
      .clearfix
        %h3 Biography
        %p#bio= @user.bio

  - if @user.courses.count > 0
    .content-section
      %h3 Courses
      %ul#courses
        - for course in @user.courses
          %li= link_to course.title, course.link
          
  - if @user.papers.count > 0
    .content-section
      %h3 Papers and Publications
      %ul#papers
        -for paper in @user.papers
          %li= paper.title

  - if @user.educations.count > 0
    .content-section
      %h3 Education
      %ul#educations
        -for education in @user.educations
          %li= education.degree

  - if @user.researches.count > 0
    .content-section
      %h3 Research
      %ul#researches
        -for research in @user.researches
          %li= research.title

= link_to "View all personas", users_path, :class => "button positive"
