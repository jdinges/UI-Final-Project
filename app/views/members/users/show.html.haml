-title "#{@user.title} #{@user.name}"

-content_for :style_name do
  = "#{@user.style_name}"

= link_to "View all Professors", members_users_path, :class => "button positive"

.clear

#prof-info
  -unless @user.bio.nil?
    .content-section
      %h3 Biography
      -if current_user == @user
        #add-element
          =link_to "Edit Biography", edit_members_user_path(current_user)
        .clear
      %span= @user.bio
    
  -unless @user.courses.count == 0
    .content-section
      %h3 Courses
      -if current_user == @user
        #add-element
          =link_to "+Add Course", new_members_course_path(current_user)
          %br
      .clear
      -for course in @user.courses
        %p=link_to "#{course.title}", course.link

      
  -unless @user.papers.count == 0
    .content-section
      %h3 Papers
      -if current_user == @user
        #add-element
          =link_to "+Add Paper", new_members_paper_path(current_user)
          %br
        .clear
      -for paper in @user.papers
        %p= paper.title

  
        
-if @user == current_user
  = link_to "Edit", edit_members_user_path, :class => "button positive"
= link_to "View all Professors", members_users_path, :class => "button positive"
