!!!
%html

  %head
    %title
      = yield(:title) || "Pr.fess.r"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    -if content_for? :style_name
      = stylesheet_link_tag yield(:style_name), :media => 'screen, projection'
    -else
      = stylesheet_link_tag "application_colors.css", :media => 'screen, projection'
    = stylesheet_link_tag "application.css", :media => 'screen, projection'
    = stylesheet_link_tag 'link_icons.css',  :media => 'screen, projection'
    = stylesheet_link_tag 'print.css',       :media => 'print'
    = stylesheet_link_tag 'buttons.css',     :media => 'screen, projection'
    /[if IE]
      = stylesheet_link_tag 'ie.css',        :media => 'screen, projection'
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield(:head)

  %body
    #header
      %h1
        -unless current_user
          =link_to "Pr.fess.r", :root
        -else
          =link_to "Pr.fess.r", members_root_url
      =userlinks(current_user)
      .clear
    
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      - if show_title?
        %h2= yield(:title)

      = yield
      
