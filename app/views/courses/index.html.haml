- title "Courses"

%table
  %tr
    %th User
    %th Title
    %th Link
  - for course in @courses
    %tr
      %td= course.user
      %td= course.title
      %td= course.link
      %td= link_to 'Show', course_path(course)
      %td= link_to 'Edit', edit_course_path(course)
      %td= link_to 'Destroy',course_path(course), :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Course", new_user_course_path
